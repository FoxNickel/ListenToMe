<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="160dp"
            android:layout_height="216dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic5"/>

        <TextView
            android:id="@+id/question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/question_image"
            android:layout_toRightOf="@id/question_image"
            android:text="《该套试题的名字》"/>

        <TextView
            android:id="@+id/question_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:layout_toEndOf="@id/question_image"
            android:layout_toRightOf="@id/question_image"
            android:text="描述：*******************
        **********************"/>

        <TextView
            android:id="@+id/queston_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_description"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:layout_toEndOf="@id/question_image"
            android:layout_toRightOf="@id/question_image"
            android:text="成绩：96分"/>

        <ImageButton
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add_to_listen_collection"
            android:layout_alignRight="@+id/add_to_listen_collection"
            android:layout_below="@+id/question_description"
            android:layout_marginTop="24dp"
            android:background="@color/transparent"
            android:src="@drawable/download"/>

        <ImageButton
            android:id="@+id/add_to_listen_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/question_name"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/transparent"
            android:src="@drawable/add_question"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>